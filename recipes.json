  "recipes": [
    {
      "id": 1,
      "name": "Simple Web Server (Nginx)",
      "description": "Deploy a basic Nginx web server",
      "category": "Web",
      "difficulty": "Beginner",
      "time": "2 min",
      "yaml": "examples/simple-web-server.yaml",
      "ports": [
        {
          "service": "nginx",
          "local": 8080,
          "container": 80
        }
      ],
      "docs_url": "https://nginx.org/en/docs/",
      "access": "kubectl port-forward svc/nginx 8080:80\nVisit: http://localhost:8080",
      "commands": {
        "deploy": "kubectl apply -f examples/simple-web-server.yaml",
        "check": "kubectl get pods -l app=nginx",
        "logs": "kubectl logs -f deployment/nginx",
        "delete": "kubectl delete -f examples/simple-web-server.yaml"
      }
    },
